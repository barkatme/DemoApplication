<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.barkatme.demo.ui.main.pdm1.jetpack.menu.JetpackMenuViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_x"
        tools:context=".ui.main.pdm1.coroutines.menu.CoroutinesMenuFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/menu_camera_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/camera_x" />

            <Button
                android:id="@+id/menu_jetpack_paging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/jetpack_paging" />
        </LinearLayout>
    </ScrollView>
</layout>